{% extends('base.html.twig') %}
{% block section %}
    <div class="checkout-area mt-60px mb-40px">
    <div class="container">
    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-7">
            <div class="billing-info-wrap">
                <h3>Ajouter une Image</h3>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="billing-info mb-20px">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image) }}
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="billing-info mb-20px">
                            <label for="Status">Définir comme image par défaut ?</label>
                            <select name="Status" class="form-control">
                                <option value="1">
                                    oui
                                </option>
                                <option value="0">
                                    Non
                                </option>
                            </select>
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <div class="billing-info mb-20px">

                            {{ form_widget(form.Enregistrer) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}