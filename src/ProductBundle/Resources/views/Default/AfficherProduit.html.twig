{% extends('base.html.twig') %}
{% block section %}
    <div class="login-register-area mb-60px mt-53px">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                            <tr>
                                <th>Image</th>
                                <th>Nom de Produit</th>
                                <th>Description</th>
                                <th>Prix</th>
                                <th>Qunatit√©</th>
                                <th>Type</th>
                                <th>Marque</th>
                                <th>Categorie</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for p in produit %}
                                <tr>
                                    <td class="product-thumbnail">
                                        <a href="#"><img src="{{ asset(p.image) }} " style="width: 200px; margin-right: 0px ;height: 200px" alt=""></a>
                                    </td>
                                    <td class="product-name"><a href="#">{{p.titre }}</a></td>
                                    <td class="product-name"><a href="#">{{p.description }}</a></td>
                                    <td class="product-price-cart"><span class="amount">{{p.prix }}</span></td>
                                    <td class="product-quantity">{{p.stock }}</td>
                                    <td class="product-quantity">{{p.type }}</td>
                                    <td class="product-subtotal">{{p.marque.titre }}</td>
                                    <td class="product-subtotal">{{p.categorie.titre }}</td>
                                    <td class="product-remove">
                                        <a href="{{ path('Modifier_Produit',{'id':p.id}) }}"><i class="fa fa-pencil-alt"></i></a>
                                        <a href="{{ path('Delete_Produit',{'id':p.id}) }}"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block marques %}
    {% for m in marque %}
        <li class="menu-dropdown">
            {{ m.titre }}
        </li>
    {% endfor %}
{% endblock %}
{% block categories %}
    {% for m in categorie %}
        <li class="menu-dropdown">
            {{ m.titre }}
        </li>
    {% endfor %}
{% endblock %}