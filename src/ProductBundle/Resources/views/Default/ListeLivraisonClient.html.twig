{% extends('base.html.twig') %}
{% block section %}
    <div class="cart-main-area mtb-60px">
        <div class="container">
            <h3 class="cart-page-title">Votre livraison </h3>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Address</th>
                                    <th>Telephone</th>
                                    <th>E-mail</th>
                                    <th>Num Commande</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for l in livraison %}
                                    <tr>

                                        <td class="product-name"><a href="#">{{ l.user.nom}}</a></td>
                                        <td class="product-name"><a href="#">{{ l.user.prenom }}</a></td>
                                        <td class="product-price-cart"><a href="#">{{ l.streetadress }}</a></td>
                                        <td class="product-price-cart"><a href="#">{{ l.phone }}</a></td>
                                        <td class="product-price-cart"><a href="#">{{ l.email }}</a></td>
                                        <td class="product-price-cart"><a href="#">{{ l.numCommande }}</a></td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}